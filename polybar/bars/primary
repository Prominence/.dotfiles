; ==================================================================================
; 'date' module definition
; ==================================================================================
; https://github.com/jaagr/polybar/wiki/Module:-date

[module/date]
type = internal/date
interval = 1

date = %{F#d8d8d8d}ÔÅ≥%{F-} %a %d %b %Y   
time = %{O10}%{F#d8d8d8d}ÔÄó%{F-} %H:%M:%S

label = %date% %time%

